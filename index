<script>
    // æ ¸å¿ƒé‚è¼¯ä¿æŒä¸€è‡´ï¼Œåƒ…é‡å° UI åé¥‹é€²è¡Œå¾®èª¿
    var defaultStock = {
        "DIYæ‰‹åšç‡ˆ": 1, "æ¨‚é«˜/ç©æœ¨ç³»åˆ—": 1, "éº¥å¡Šå°äºº/æ»‘æ¿": 1, "é»å¿ƒéºµç²‰å½©ç­†": 1,
        "åˆä½œç¤¾10å…ƒå·": 30,
        "æ¦®è­½å¡1é»": 999, "é€ å‹è²¼ç´™": 999, "é£Ÿç‰©ç›²è¢‹": 999, "å¯¦ç”¨æ–‡å…·": 999,
        "å°åŒ…é›¶é£Ÿ": 999, "é‹ç®”åŒ…é£²æ–™": 999, "é©šå–œç›²ç›’": 999
    };

    var giftData = [
        { c: "ğŸ“ æ–‡å…·èˆ‡å°ç‰©", items: [
            {n:"æ¦®è­½å¡1é»", p:1}, {n:"åˆä½œç¤¾10å…ƒå·", p:10}, {n:"é€ å‹è²¼ç´™", p:20}, {n:"é£Ÿç‰©ç›²è¢‹", p:20}, {n:"å¯¦ç”¨æ–‡å…·", p:30}
        ]},
        { c: "ğŸ¿ é›¶é£Ÿèˆ‡ç´“å£“", items: [
            {n:"å°åŒ…é›¶é£Ÿ", p:60}, {n:"é‹ç®”åŒ…é£²æ–™", p:80}, {n:"é©šå–œç›²ç›’", p:100}
        ]},
        { c: "ğŸ å¤¢å¹»å¤§ç¦®ç‰©", items: [
            {n:"DIYæ‰‹åšç‡ˆ", p:120}, {n:"æ¨‚é«˜/ç©æœ¨ç³»åˆ—", p:120}, {n:"éº¥å¡Šå°äºº/æ»‘æ¿", p:120}, {n:"é»å¿ƒéºµç²‰å½©ç­†", p:120}
        ]}
    ];

    function getDB() {
        return JSON.parse(localStorage.getItem('SHOP_V2')) || { uP: {}, logs: [], stock: defaultStock };
    }

    function renderShop() {
        var db = getDB();
        var gHtml = "";
        for(var i=0; i<giftData.length; i++) {
            gHtml += '<div class="section-title">' + giftData[i].c + '</div>';
            for(var j=0; j<giftData[i].items.length; j++) {
                var item = giftData[i].items[j];
                var stockCount = db.stock[item.n];
                var isOut = stockCount <= 0;
                var stockClass = stockCount < 5 ? "stock-tag stock-low" : "stock-tag";
                var limitInfo = (item.n === "åˆä½œç¤¾10å…ƒå·" || i === 2) ? '<span class="'+stockClass+'">å‰©é¤˜ '+stockCount+' ä»¶</span>' : '';

                gHtml += `
                <div class="gift-item ${isOut ? 'out' : ''}" id="item-${i}-${j}">
                    <div class="gift-info">
                        <span class="gift-name">${item.n}</span>
                        <span class="gift-price">ğŸ’ ${item.p} é»</span>
                        ${limitInfo}
                    </div>
                    <input type="checkbox" class="chk" data-n="${item.n}" data-p="${item.p}" 
                           onchange="handleCheck(this, 'item-${i}-${j}')" 
                           ${isOut ? 'disabled' : ''} 
                           style="width:24px; height:24px; cursor:pointer;">
                </div>`;
            }
        }
        document.getElementById('gifts-container').innerHTML = gHtml;
    }

    function handleCheck(chk, id) {
        var el = document.getElementById(id);
        if(chk.checked) el.classList.add('active');
        else el.classList.remove('active');
        calc();
    }

    function doLogin() {
        var u = document.getElementById('user').value;
        var p = document.getElementById('pass').value;
        if(!u || !p) { alert("è«‹é¸æ“‡åå­—ä¸¦è¼¸å…¥å¯†ç¢¼ï¼"); return; }
        var db = getDB();
        if(!db.uP[u]) db.uP[u] = p;
        if(db.uP[u] === p) {
            document.getElementById('who').innerText = "â­ " + u + " æ­£åœ¨é¸è³¼";
            document.getElementById('page-login').style.display = "none";
            document.getElementById('page-shop').style.display = "block";
            renderShop();
        } else { alert("å¯†ç¢¼éŒ¯èª¤ï¼è«‹é‡æ–°è¼¸å…¥"); }
        localStorage.setItem('SHOP_V2', JSON.stringify(db));
    }

    function calc() {
        var total = parseInt(document.getElementById('nowP').value) || 0;
        var cost = 0;
        var chks = document.getElementsByClassName('chk');
        for(var i=0; i<chks.length; i++) if(chks[i].checked) cost += parseInt(chks[i].getAttribute('data-p'));
        var remain = total - cost;
        
        var resEl = document.getElementById('resP');
        resEl.innerText = remain;
        resEl.style.color = remain < 0 ? "#ff4d4d" : "white";

        var btn = document.getElementById('buyBtn');
        if (total <= 0) {
            btn.disabled = true;
            btn.innerText = "è«‹å…ˆè¼¸å…¥æ‚¨çš„é»æ•¸";
        } else if (remain < 0) {
            btn.disabled = true;
            btn.innerText = "é»æ•¸é¤˜é¡ä¸è¶³";
        } else if (cost === 0) {
            btn.disabled = true;
            btn.innerText = "è«‹å‹¾é¸æƒ³æ›çš„ç¦®ç‰©";
        } else {
            btn.disabled = false;
            btn.innerText = "ç¢ºèªå…Œæ› (èŠ±è²» " + cost + " é»)";
        }
    }

    function doBuy() {
        var u = document.getElementById('user').value;
        var db = getDB();
        var items = [];
        var chks = document.getElementsByClassName('chk');
        for(var i=0; i<chks.length; i++){
            if(chks[i].checked) {
                var name = chks[i].getAttribute('data-n');
                if(db.stock[name] > 0) {
                    items.push(name);
                    db.stock[name] -= 1;
                } else {
                    alert(name + " å‰›è¢«æ›å®Œäº†ï¼Œè«‹å–æ¶ˆå‹¾é¸ï¼");
                    return;
                }
            }
        }
        
        db.logs.push({ 
            t: new Date().toLocaleString('zh-TW', {hour12:false}), 
            n: u, 
            it: items.join(", "), 
            re: document.getElementById('resP').innerText 
        });
        localStorage.setItem('SHOP_V2', JSON.stringify(db));
        alert("ğŸ‰ å…Œæ›æˆåŠŸï¼è¨˜å¾—æ‰¾è€å¸«é ˜å–ç¦®ç‰©å–”ï¼");
        location.reload();
    }

    function goAdmin() {
        var pass = prompt("è«‹è¼¸å…¥è€å¸«ç®¡ç†å¯†ç¢¼ï¼š");
        if(pass === "teacher123") {
            document.getElementById('page-login').style.display = "none";
            document.getElementById('page-shop').style.display = "none";
            document.getElementById('page-admin').style.display = "block";
            var db = getDB();
            var sHtml = "";
            for(var key in db.stock) {
                var count = db.stock[key];
                if(count < 500) {
                    var color = count < 5 ? 'red' : '#475569';
                    sHtml += `<span style="display:inline-block; margin-right:10px; color:${color}">${key}: <b>${count}</b></span>`;
                }
            }
            document.getElementById('stockStatus').innerHTML = sHtml || "ç›®å‰æ‰€æœ‰å“é …åº«å­˜å……è¶³";
            
            var h = "<table><tr><th>æ™‚é–“</th><th>å§“å</th><th>ç‰©å“</th><th>é¤˜é¡</th></tr>";
            for(var i=db.logs.length-1; i>=0; i--) {
                h += `<tr><td>${db.logs[i].t}</td><td>${db.logs[i].n}</td><td>${db.logs[i].it}</td><td>${db.logs[i].re}</td></tr>`;
            }
            document.getElementById('logTable').innerHTML = h + "</table>";
        } else if(pass !== null) {
            alert("å¯†ç¢¼éŒ¯èª¤ï¼");
        }
    }
</script>
